{
  "variables": {
    "ssh_name": "eco",
    "ssh_pass": "eco",
    "hostname": "eco",
    "version":  "0.1.0"
  },
  "post-processors": [
    {
      "output": "../build/influxdb-{{user `version`}}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{user `ssh_pass`}}' | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
      "inline": [
        "ansible-galaxy install redouane.influxdb",
        "ansible-galaxy install redouane.grafana"
      ]
    },
    {
      "type": "ansible-local",
      "command": "sudo ansible-playbook",
      "playbook_file": "influxdb.yml"
    }
  ],
  "builders": [{
    "type": "virtualbox-ovf",
    "source_path": "../build/ubuntu_14.04.ovf",
    "http_directory" : "influxdb",
    "http_port_min" : 9001,
    "http_port_max" : 9001,
    "ssh_username": "{{user `ssh_name`}}",
    "ssh_password": "{{user `ssh_pass`}}",
    "ssh_wait_timeout": "1000s",
    "communicator": "ssh",
    "ssh_pty": "true",
    "vm_name": "influxdb",
    "shutdown_command": "echo {{user `ssh_pass`}} | sudo -S shutdown -P now"
  }]
}

